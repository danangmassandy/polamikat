.padding20(layout="column" flex)
    h2 Data Personil Satlantas
    .marginTop40
    div(ng-if="me.isAdmin" layout)
        md-button(class="plainButton" style="margin: 0px;" ng-click="goTo('admin_add_personil')") Tambah Data Personil
    .marginTop30(ng-if="me.isAdmin")
    table(class="table table-bordered table-striped")
        thead
            tr
                th 
                    a(href="")
                        span No
                th 
                    a(href="" ng-click="sortType = 'nrp'; sortReverse = !sortReverse;")
                        span NRP 
                        span(class="fa fa-caret-up" ng-show="sortType == 'nrp' && sortReverse")
                        span(class="fa fa-caret-down" ng-show="sortType == 'nrp' && !sortReverse")
                th 
                    a(href="" ng-click="sortType = 'pangkat'; sortReverse = !sortReverse;")
                        span Pangkat
                        span(class="fa fa-caret-up" ng-show="sortType == 'pangkat' && sortReverse")
                        span(class="fa fa-caret-down" ng-show="sortType == 'pangkat' && !sortReverse")
                th 
                    a(href="" ng-click="sortType = 'name'; sortReverse = !sortReverse;")
                        span Nama 
                        span(class="fa fa-caret-up" ng-show="sortType == 'name' && sortReverse")
                        span(class="fa fa-caret-down" ng-show="sortType == 'name' && !sortReverse")
                th 
                    a(href="" ng-click="sortType = 'polsekPenugasan'; sortReverse = !sortReverse;")
                        span Polsek
                        span(class="fa fa-caret-up" ng-show="sortType == 'polsekPenugasan' && sortReverse")
                        span(class="fa fa-caret-down" ng-show="sortType == 'polsekPenugasan' && !sortReverse")
                th 
                    a(href="" ng-click="sortType = 'wilayahPenugasan'; sortReverse = !sortReverse;")
                        span Penugasan
                        span(class="fa fa-caret-up" ng-show="sortType == 'wilayahPenugasan' && sortReverse")
                        span(class="fa fa-caret-down" ng-show="sortType == 'wilayahPenugasan' && !sortReverse")
        tbody(ng-if="personilListData && personilListData.length > 0")
            tr(ng-repeat="x in personilListData | orderBy:sortType:sortReverse")
                td {{ $index + 1 }}
                td {{ x.nrp }}
                td {{ x.pangkat }}
                td.serviceName {{ x.name }}
                td {{ x.polsekPenugasan }}
                td {{ x.wilayahPenugasan }}
        tbody(ng-if="!personilListData || !personilListData.length")
            tr
                td(colspan="6") No Data