extends layout_default

block stylesheets
    link(rel="stylesheet", href="/stylesheets/side_nav.css")

block menu
    div(ng-controller="sideNavController" layout="column")
        md-content
            div(class="logo") Polamikat
            div(class="account marginTop30 marginRight20 marginBottom20 marginLeft20", layout="row", layout-align="start center" flex)
                div(class="avatar md-48" ng-if="me.photo" ng-style="{'background':'url('+me.photo+') center center','background-size':'cover'}" style="border-radius:50%; font-size: 48px; height: 48px; width: 48px;")
                md-icon(class="avatar md-48" style="width: 48px; height: 48px;" ng-if="!me.photo") account_circle
                div(class="marginLeft5" layout="column" flex)
                    div(layout-align="start center" ng-cloak="me.displayName") {{me.displayName}}
            div(class="sideNavMenuItem bold" flex)
                div(ng-class="selectedMenu == 'list_personil' ? 'selected' : 'notSelected'" layout="row" layout-align="start center" ng-click="goTo('list_personil')")
                    div Data Personil Satlantas
                    div(flex)
                div(ng-class="selectedMenu == 'grafik_personil' ? 'selected' : 'notSelected'" layout="row" layout-align="start center" ng-click="goTo('grafik_personil')")
                    div Grafik Kegiatan Personil
                    div(flex)
                div(ng-class="selectedMenu == 'nilai_personil' ? 'selected' : 'notSelected'" layout="row" layout-align="start center" ng-click="goTo('nilai_personil')")
                    div Grafik Nilai Personil
                    div(flex)
                div(ng-class="selectedMenu == 'tambah_kegiatan_personil' ? 'selected' : 'notSelected'" layout="row" layout-align="start center" ng-click="goTo('tambah_kegiatan_personil')")
                    div Tambah Kegiatan
                    div(flex)
                div(ng-class="selectedMenu == 'daftar_kegiatan_personil' ? 'selected' : 'notSelected'" layout="row" layout-align="start center" ng-click="goTo('daftar_kegiatan_personil')")
                    div Daftar Kegiatan Personil
                    div(flex)
                div(ng-class="selectedMenu == 'edit_kategori_kegiatan' ? 'selected' : 'notSelected'" layout="row" layout-align="start center" ng-click="goTo('edit_kategori_kegiatan')" ng-if="isAdmin")
                    div Edit Kategori Kegiatan Personil
                    div(flex)
                div(ng-class="selectedMenu == 'update_user_profile' ? 'selected' : 'notSelected'" layout="row" layout-align="center center" ng-click="goTo('update_user_profile')")
                    div Profil Saya
                    div(flex)
                div(class="notSelected" style="padding: 10px 0px 10px 20px" layout="row" ng-click="logout()")
                    //- div star
                    div Logout
block content
    md-toolbar(ng-hide="toolbarHidden")
        div(class="md-toolbar-tools")
            md-button(class="md-icon-button", aria-label="Settings", ng-click="toggleLeft()")
                md-icon menu
    div(layout="column", flex, ng-view)

block script
    script(src="/javascripts/index.js")
    script(src="/javascripts/api.js")
    script(src="/javascripts/ctrl_side_nav.js")
    script(src="/javascripts/ctrl_user_profile.js")
    script(src="/javascripts/ctrl_list_personil.js")
    script(src="/javascripts/ctrl_grafik_personil.js")
    script(src="/javascripts/ctrl_nilai_personil.js")
    script(src="/javascripts/ctrl_tambah_kegiatan_personil.js")
    script(src="/javascripts/ctrl_daftar_kegiatan_personil.js")
    script(src="/javascripts/ctrl_edit_kegiatan.js")
    script.
        var me = JSON.parse("!{me}");
